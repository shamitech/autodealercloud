FROM node:18-alpine AS builder

WORKDIR /app

COPY services/admin-dashboard/package*.json ./

RUN npm ci

COPY services/admin-dashboard .

RUN npm run build

FROM node:18-alpine

WORKDIR /app

COPY services/admin-dashboard/package*.json ./

RUN npm ci --only=production

COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public

EXPOSE 3000

CMD ["npm", "start"]
