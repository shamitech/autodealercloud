# Application Settings
APP_NAME=AutoDealerCloud
APP_ENV=local
APP_DEBUG=true
APP_URL=https://autodealercloud.app
APP_TENANT_DOMAIN=autodealercloud.app

# API Settings
API_PORT=8000
VITE_API_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=autodealercloud
DB_USERNAME=autodealercloud
DB_PASSWORD=secret

# Lightspeed Integration
LIGHTSPEED_API_KEY=your_lightspeed_api_key
LIGHTSPEED_API_SECRET=your_lightspeed_api_secret
LIGHTSPEED_API_URL=https://api.lightspeedapp.com

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM_ADDRESS=noreply@autodealercloud.app
MAIL_FROM_NAME="${APP_NAME}"

# Session Configuration
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis

# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# JWT / Authentication
JWT_SECRET=your_jwt_secret_key
