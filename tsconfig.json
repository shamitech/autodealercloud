{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "services/admin-api/**/*",
    "services/cms-api/**/*",
    "services/publisher-api/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "services/*/node_modules",
    "services/*/dist",
    ".next",
    "build"
  ]
}


